{
  "schemaVersion": 1,
  "id": "scpfondation",
  "version": "${version}",

  "name": "SCP Fondation",
  "description": "A nice mod that allows you to build the SCP Fondation in minecraft, with all the functionalities that are expected",
  "authors": [
    "Natank25",
    "Patato_91"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",
  "icon": "mod_icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.natank25.scpfondation.ScpFondation"
    ],
    "client": [
      "io.github.natank25.scpfondation.ScpFondationClient"
    ]
  },
  "mixins": [
    "scpfondation.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
